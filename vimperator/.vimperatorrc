"source! ~/.vimperatorrc.local
set hintchars=hjklasdfgyuiopqwertnmzxcvb
let mapleader = "-"

"Faster scrolling
noremap j 3j
noremap k 3k
nmap <C-j> <C-d>
nmap <C-k> <C-u>

"Tabs
nmap ú :tabnext<CR>
nmap ő :tabprevious<CR>
nmap á :tabmove +1<CR>
nmap é :tabmove -1<CR>
command! BB :tabnew

"History navigation
nmap , :back<CR>
nmap . :forward<CR>

"Context menu
nnoremap cc ;c

"Quick open Addons
command! AA :addons

"Open private window
command! private :normal i<C-S-p>

"Search highlight
nmap <leader>h :noh<CR>

"Bookmarks
nmap <C-b> :bmarks<CR>

"Source this config
command! RR source ~/.vimperatorrc
