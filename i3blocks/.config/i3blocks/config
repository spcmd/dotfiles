# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
color=#000000

[mocnowplaying]
markup=pango
command=$HOME/.config/i3blocks/i3blocks_moc_now_playing.sh
#align=center
#min_width=680
interval=once
signal=3

[mail]
#label=
markup=pango
command=$HOME/.config/i3blocks/i3blocks_mail.sh
interval=60
signal=2

[volume]
label=<span size='medium'> </span>
markup=pango
command=$HOME/.config/i3blocks/i3blocks_volume.sh
interval=once
signal=1

[battery]
markup=pango
command=$HOME/.config/i3blocks/i3blocks_battery.sh
interval=300

[datetime]
command=$HOME/.config/i3blocks/i3blocks_datetime.sh
interval=60
