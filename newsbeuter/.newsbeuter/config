# SETTINGS -------------------------------------------------------------------------------

articlelist-format "%4i %f %D %6L  %?T?|%-25T|  ?%t"
auto-reload yes
browser ~/bin/firefox-esr/firefox
#html-renderer "/usr/bin/lynx -display_charset=utf-8 -cfg ~/.config/lynx/lynx.cfg -dump"
#confirm-exit yes
#datetime-format %b %d
display-article-progress yes
feedlist-format "%4i %n %11u %t"
goto-next-feed no
goto-first-unread no
history-limit 0
max-items 35
reload-time 15
download-path "~/Downloads" #podbeuter
save-path "~/Downloads"
player "$MEDIAPLAYER" #podbeuter
show-keymap-hint yes
show-read-feeds yes
show-read-articles yes
suppress-first-reload no
text-width 80
search-highlight-colors color5 color4

# KEY BINDINGS --------------------------------------------------------------------------
unbind-key ^K
unbind-key ^J
unbind-key Q

bind-key j next
bind-key k prev
bind-key j down article
bind-key k up article
bind-key l open
bind-key h quit article
bind-key h quit articlelist
bind-key h quit tagselection
bind-key ^N reload-all
bind-key F edit-flags
bind-key o sort feedlist
bind-key O rev-sort feedlist
bind-key o open-in-browser articlelist
bind-key o open-in-browser article
bind-key n next-unread
bind-key N prev-unread
bind-key g pageup
bind-key G pagedown
bind-key a mark-feed-read
bind-key ; macro-prefix
macro f edit-flags "f"
macro F edit-flags ""
macro u edit-flags ""
macro m set browser "$MEDIAPLAYER %u"; open-in-browser ; set browser "~/bin/firefox-esr/firefox"

# COLORS --------------------------------------------------------------------------------
# color <element> <foreground color> <background color> [<attribute> ...]

color background color1 color0
color listnormal color1 color0
color listfocus  color1 color3
color listnormal_unread color1 color0
color listfocus_unread  color1 color3
color info       color0 color2
color article    color1 color0

highlight feedlist "✗ Unread" color0 color4
highlight feedlist "⚑ Flagged" color0 color4
highlight feedlist "Youtube" color1 color5
highlight articlelist "Youtube" color1 color5
highlight feedlist "Arch Linux" color1 color3
highlight articlelist "Arch Linux" color1 color3
highlight feedlist "IT/Tech" color0 color2
highlight articlelist "IT/Tech" color0 color2
highlight feedlist "Reddit" color3 color1
highlight articlelist "Reddit" color3 color1
highlight feedlist "Blog" color1 color7
highlight articlelist "Blog" color1 color7
highlight feedlist "Podcast" color1 color7
highlight articlelist "Podcast" color1 color7
highlight article "(^Feed:|^Title:|^Author:|^Link:|^Date:|^Flags:)" color2 color0
highlight article "https?://[^ ]+" color4 color0
highlight article "\\[[0-9]{1,2}\]" color2 color0

