! ------------------------------------------
! Render setting for cairo -> pango -> gtk
! ------------------------------------------

Xft.dpi:        96
Xft.antialias:  true
Xft.hinting:    true
Xft.rgba:       rgb
Xft.hintstyle:  hintmedium

! ------------------------------------------
! Urxvt settings
! ------------------------------------------

URxvt.termName: rxvt-unicode-256color
URxvt.terminalName: rxvt-unicode-256color

! Background: True transparency - Ranger w3m image display will not work when enabled -- using compton setting instead
!URxvt.depth: 32
URxvt.background: [90]#000000

! Foreground
URxvt.foreground: #ffffff

! Fonts
URxvt.font: xft:DejaVu Sans Mono:pixelsize=14:antialias=true:hinting=true,xft:FontAwesome:pixelsize=14
URxvt.letterSpace: -2
URxvt.lineSpace: 1

! Disable scrollbar
URxvt.scrollBar: false

! For Mutt to warn about new e-mails (and set this is the .muttrc: set beep_new)
URxvt.urgentOnBell: true

! Perl Extensions: copy/paste, url-selection
URxvt.perl-ext-common: default,clipboard,matcher
URxvt.url-launcher: firefox
URxvt.matcher.button: 1
URxvt.url-select-underline: true
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! ------------------------------------------
! App icons
! ------------------------------------------
! pixbuf enabled urxvt needed!
! Download at: https://aur.archlinux.org/packages/rxvt-unicode-pixbuf/
! If fonts are messed up, disable the font width and/or line spacing patches in the PKGBUILD

URxvt.iconFile: /home/spcmd/.icons/urxvt.png
ranger.iconFile: /home/spcmd/.icons/ranger.png

