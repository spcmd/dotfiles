# view: comics
view.add=comics
view.persistent=comics
view.collapsed.toggle=comics

# add tag: comics
method.insert = tag_add.comics,simple,\
    "execute=rtc,--add-tag,$d.name=,$argument.0=;\
    view.set_visible=$argument.0=;\
    print=\"----------------------------------------------------------------------------------------\";\
    print=\"rtcontrol> Set tag: '\",\"$cat=,$argument.0=\",\"' --> \",$d.name=;\
    print=\"----------------------------------------------------------------------------------------\""

# remove tag: comics
method.insert = tag_remove.comics,simple,\
    "execute=rtc,--remove-tag,$d.name=,$argument.0=;\
    d.views.remove=$argument.0=;\
    view.set_not_visible=$argument.0=;\
    print=\"----------------------------------------------------------------------------------------\";\
    print=\"rtcontrol> Removed tag: '\",\"$cat=,$argument.0=\",\"' --> \",$d.name=;\
    print=\"----------------------------------------------------------------------------------------\""

# remove ALL tags: comics
method.insert = tag_removeAll.comics,simple,\
    "execute=rtc,--remove-tag-all,$d.name=,$argument.0=;\
    view.filter=$argument.0=,false=;\
    d.multicall2=main,\
    d.views.remove=$argument.0=;\
    print=\"----------------------------------------------------------------------------------------\";\
    print=\"rtorrent> Removed all: '\",\"$cat=,$argument.0=\",\"' tag\";\
    print=\"----------------------------------------------------------------------------------------\""

# key bindings: comics
schedule = bind.comics_toggle,0,0,"ui.bind_key=download_list,c,tag_add.comics=comics"
schedule = bind.comics_clear,0,0,"ui.bind_key=download_list,C,tag_remove.comics=comics"



